{
	"private": true,
	"type": "module",
	"browserslist": [
		">= 1%",
		"last 1 major version",
		"not dead",
		"Chrome >= 45",
		"Firefox >= 38",
		"Edge >= 12",
		"Explorer >= 10",
		"iOS >= 9",
		"Safari >= 9",
		"Android >= 4.4",
		"Opera >= 30"
	],
	"scripts": {
		"build-css": "npx postcss 'build/package/**/css/!(settings|*.min).css' --ext '.min.css' --base build/ --no-map -d build/",
		"build-js": "node .github/scripts/build-js.js",
		"build-templates": "node .github/scripts/build-templates.js",
		"build": "npm run build-css && npm run build-js && npm run build-templates",
		"build-dev": "npm run build && npm run lint-css",
		"lint-css": "npx stylelint '**/*.css' --fix"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.17",
		"autoprefixer": "^10.4.22",
		"cssnano": "^7.0.1",
		"glob": "^13.0.0",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"postcss-import": "^16.0.0",
		"sass-embedded": "^1.93.3",
		"stylelint": "^16.0.2",
		"stylelint-order": "^6.0.1",
		"tailwindcss": "^4.1.17",
		"uglify-js": "^3.14.5"
	}
}
