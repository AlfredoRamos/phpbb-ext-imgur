{
	"name": "alfredoramos/imgur",
	"type": "phpbb-extension",
	"description": "Imgur extension for phpBB",
	"homepage": "https://github.com/AlfredoRamos/phpbb-ext-imgur",
	"version": "2.0.0-dev",
	"time": "2025-10-07",
	"keywords": [
		"phpbb",
		"extension",
		"imgur",
		"uploader"
	],
	"license": "GPL-2.0-only",
	"authors": [
		{
			"name": "Alfredo Ramos",
			"email": "alfredo.ramos@proton.me",
			"homepage": "https://alfredoramos.mx",
			"role": "Lead Developer"
		}
	],
	"require": {
		"php": "^8.1.0",
		"composer/installers": "^2.2.0",
		"j0k3r/php-imgur-api-client": "^4.0.2"
	},
	"require-dev": {
		"phing/phing": "^2.16.0",
		"pear/archive_tar": "^1.4.0"
	},
	"extra": {
		"display-name": "Imgur",
		"soft-require": {
			"phpbb/phpbb": "~4.0.0"
		},
		"version-check": {
			"host": "alfredoramos.mx",
			"directory": "/phpbb-extensions/versions",
			"filename": "imgur.json",
			"ssl": true
		}
	},
	"config": {
		"prepend-autoloader": false,
		"allow-plugins": {
			"composer/installers": true
		}
	}
}